{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <h1>Image</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td><img style="max-width:25rem" src="{{ image.Url }}" alt=""></td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ image.Alt }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ image.Title }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_image_index') }}">back to list</a>

    <a href="{{ path('app_image_edit', {'id': image.id}) }}">edit</a>

    {{ include('image/_delete_form.html.twig') }}
{% endblock %}
