{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
<h1>Project</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ project.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ project.name }}</td>
        </tr>
        <tr>
            <th>Url</th>
            <td>{{ project.url }}</td>
        </tr>
        <tr>
            <td>
                {% for tag in project.tags %}
                {{ tag.name | capitalize }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </td>
        </tr>
    </tbody>
</table>

<a href="{{ path('app_project_index') }}">back to list</a>

<a href="{{ path('app_project_edit', {'id': project.id}) }}">edit</a>

{{ include('project/_delete_form.html.twig') }}
{% endblock %}